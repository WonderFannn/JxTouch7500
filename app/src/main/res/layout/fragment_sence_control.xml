<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/leftbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/default_img_desc"
        android:src="@drawable/leftbtnbk"
        app:layout_aspectRatio="@fraction/same_ratio"
        app:layout_heightPercent="30%"
        app:layout_marginLeftPercent="2%" />

    <GridView
        android:id="@+id/spacegridv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:horizontalSpacing="@dimen/space_15"
        android:numColumns="3"
        android:scrollbars="none"
        app:layout_heightPercent="95%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_widthPercent="60%" />

    <ImageView
        android:id="@+id/rightbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/default_img_desc"
        android:src="@drawable/rightbtnact"
        app:layout_aspectRatio="@fraction/same_ratio"
        app:layout_heightPercent="30%"
        app:layout_marginRightPercent="2%" />

</android.support.percent.PercentRelativeLayout>