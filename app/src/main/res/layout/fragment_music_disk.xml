<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_disk_under"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@drawable/power_ampilier_turntable"
        android:contentDescription="@string/default_img_desc"
        app:layout_aspectRatio="@fraction/same_ratio"
        app:layout_heightPercent="47%"
    />

    <ImageView
        android:id="@+id/iv_disk_above"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/default_img_desc"
        android:src="@drawable/power_ampilier_disk"
        app:layout_aspectRatio="@fraction/same_ratio"
        app:layout_heightPercent="44%"
      />


    <ImageView
        android:id="@+id/iv_disk_hand"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/default_img_desc"
        android:src="@drawable/power_ampilier_magnnetic_needle"
        app:layout_aspectRatio="@fraction/music_hand_ratio"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="12%"/>

</android.support.percent.PercentRelativeLayout>
