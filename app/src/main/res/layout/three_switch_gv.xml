<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/three_switch_gv_imag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/infrared_transpond_gridview_item"
        />
    <TextView
        android:id="@+id/three_switch_gv_iv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/three_switch_gv_imag"
        app:layout_marginLeftPercent="2.5%"
        app:layout_marginRightPercent="2.5%"
        app:layout_marginTopPercent="1.5%"
        android:textSize="@dimen/text_18"
        />
</android.support.percent.PercentRelativeLayout>