<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/space_10"
    android:paddingTop="@dimen/space_10">

    <TextView
        android:id="@+id/tv_message_time_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/color_ccc"
        android:textSize="@dimen/text_17" />

    <Button
        android:id="@+id/btn_message_delete"
        android:layout_width="@dimen/space_70"
        android:layout_height="@dimen/space_40"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_btn_frame"
        android:text="@string/message_alert_delete"
        android:textColor="@color/color_ccc"
        android:textSize="@dimen/text_15" />

</RelativeLayout>
