<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:orientation="vertical">

    <ImageView
        android:id="@+id/background_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/following_background"
        android:contentDescription="@string/default_img_desc"
        app:layout_marginTopPercent="35%"/>

    <com.jinxin.jxtouchscreen.widget.fancycoverflow.FancyCoverFlow
        android:id="@+id/fancyCoverFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/txt_topic_space"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="90%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="75%"
        app:maxRotation="45"
        app:scaleDownGravity="0.5"
        app:unselectedAlpha="0.3"
        app:unselectedSaturation="0.0"
        app:unselectedScale="0.4"/>
</android.support.percent.PercentRelativeLayout>